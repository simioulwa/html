<!DOCTYPE html>
<html>
    <head>
        <title>
            inherited class
        </title>
    </head>
    <body>
        <h1>inherited class</h1>
        <div id="result"></div>
        <div id="result1"></div>
        <script>
            class car{
                constructor(brand) {

                    this.brand = brand
                }
                display(){
                   document.getElementById("result").innerHTML = this.brand
                
                }
            }
            class model extends car{
                constructor(brand,mode){
                    super(brand)
                    this.mode = mode
                }
                disp(){
                    this.display()
                    document.getElementById("result1").innerHTML = this.mode
                }   
            }
            const ml = new model("Mercedes", 2018);
           ml.disp();
        </script>

      